<nav class="nav-bar"> 
    <h1 class="project-heading">Task Management System</h1>
</nav>
<div class='container'>
  <h2>Add a comment</h2>
  <%= form_with model: @comment, url: project_task_comments_path, local: true do |form| %>
    <% if @comment.errors.any? %>
        <div id="error-modal">
          <h3>
              The following <%= pluralize(@comment.errors.count, "error") %> stopped this task from being saved:
          </h3>
          <ul>
              <% @comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter %>
    </p>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body, class:'description' %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>