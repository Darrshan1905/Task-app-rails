<div class='projects-container'>
    <h2> List of all projects </h2>

    <%= link_to 'Click to create a new project', new_project_path %><br><br>

    <table>
        <tr>
            <th> Project Title </th>
            <th> Start Date </th>
            <th> End Date </th>
            <th colspan="3">Actions</th> 
        </tr>

        <% @projects.each do |project| %>
            <tr>
                <td><%= project.title %></td>
                <td><%= project.start_date %></td>
                <td><%= project.end_date %></td>
                <td><%= link_to 'Show', project_path(project), class:'show' %></td>
                <td><%= link_to 'Edit', edit_project_path(project), class:'edit' %></td>
                <td><%= link_to 'Delete', project_path(project), method: :delete, data: {confirm: 'Are you sure you want to delete this project'}, class:'delete' %></td>
            </tr>
        <% end %>
    </table>
</div>