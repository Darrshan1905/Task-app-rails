<%= link_to 'Click to create a new project', new_project_path %>

<h2> List of all projects </h2>

<table>
    <tr>
        <th> Project Title </th>
        <th> Start Date </th>
        <th> End Date </th>
    </tr>

    <% @projects.each do |project| %>
        <tr>
            <td><%= project.title %></td>
            <td><%= project.start_date %></td>
            <td><%= project.end_date %></td>
            <td><%= link_to 'Show', project_path(project) %></td>
            <td><%= link_to 'Edit', edit_project_path(project) %></td>
            <td><%= link_to 'Delete', project_path(project), method: :delete, data: {confirm: 'Are you sure you want to delete this project'} %></td>
        </tr>
    <% end %>
</table>