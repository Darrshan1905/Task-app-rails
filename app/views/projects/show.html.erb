<%= link_to 'Edit project', edit_project_path(@project), class:'back-link' %>
<%= link_to 'Back to all projects page', projects_path, class: 'back-link' %>

<div class='projects-container'>
    <h1>Project Details</h1>
    <div class='project-details'>
        <p>
            <strong>Project Title: </strong>
            <%= @project.title %>
        </p>

        <p>
            <strong>Start Date: </strong>
            <%= @project.start_date %>
        </p>

        <p>
            <strong>End Date: </strong>
            <%= @project.end_date %>
        </p>
    </div>

    <div class='actions'>
        <%= link_to 'Add a new task', new_project_task_path(@project), class:'show' %> <br><br>
    </div>

    <hr>
    <h2> Tasks related to the project </h2>
    <%= render @project.tasks %>
    <br>
</div>

