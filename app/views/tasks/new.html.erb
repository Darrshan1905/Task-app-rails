<div class='container'>
    <h2>Create new task</h2>
    <%= form_with scope: @task, url: project_tasks_path, local: true do |form| %>
        <% if @task.errors.any? %>
            <div id="error-modal">
                <h3>
                    The following <%= pluralize(@task.errors.count, "error") %> stopped this task from being saved:
                </h3>
                <ul>
                    <% @task.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <p>
            <%= form.label :"Task Name" %><br>
            <%= form.text_field :name %>
        </p>
        <p>
            <%= form.label :"Task duration" %><br>
            <%= form.text_field :duration %>
        </p>
        <p>
            <%= form.label :"Task description" %><br>
            <%= form.text_area :description, class:'description' %>
        </p>
        <p>
            <%= form.submit %>
        </p>
    <% end %>
</div>

 