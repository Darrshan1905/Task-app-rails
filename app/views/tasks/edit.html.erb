<%= link_to 'Back', project_path(@project), class:'back-link'%>

<div class="container">
    <h2>Edit task</h2>
    
    <%= form_with model: @task, url: project_task_path(@project, @task), method: :patch, local: true do |form| %>
        <% if @task.errors.any? %>
            <div id="error-modal">
                <h3>
                    The following <%= pluralize(@task.errors.count, "error") %> stopped this task from being saved:
                </h3>
                <ul>
                    <% @task.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <p>
            <%= form.label :"Task Name" %><br>
            <%= form.text_field :name %>
        </p>
        <p>
            <%= form.label :"Task duration" %><br>
            <%= form.text_field :duration %>
        </p>
        <p>
            <%= form.label :"Task description" %><br>
            <%= form.text_area :description, class:'description' %>
        </p>
        <p>
            <%= form.submit %>
        </p>
    <% end %>
</div>
